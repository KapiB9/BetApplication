        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetApplication"
        mc:Ignorable="d"
        Title="Recharge" Height="180" Width="400">
    <Grid>
        <TextBox x:Name="Money" HorizontalAlignment="Left" Height="37" Margin="35,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="101" FontSize="16"/>
        <TextBlock TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Text="Wpisz kwote:" Margin="35,18,0,0" FontSize="16" FontWeight="Bold" Height="30" Width="150"/>
        <Button x:Name="Add" VerticalAlignment="Top" HorizontalAlignment="Center" Content="Dodaj" FontSize="16" Background="#FFACE670" Click="AddBalance_Click" Height="37" Width="72" Margin="0,55,0,0" FontWeight="Bold"/>

    </Grid>
</Window>
