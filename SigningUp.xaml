<Window x:Class="BetApplication.SigningUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetApplication"
        mc:Ignorable="d"
        Title="SigningUp" Height="692" Width="423">
    <Grid Margin="0,0,0,-16" Background="#FF514C4C">
        <Grid.RowDefinitions>
            <RowDefinition Height="147*"/>
            <RowDefinition Height="199*"/>
        </Grid.RowDefinitions>
        <Label Content="SigmaBet" HorizontalAlignment="Center" Height="56" VerticalAlignment="Top" Width="400" 
               Background="#FF1CDCDB" Foreground="#FFF8F7F7" FontSize="36" 
               FontFamily="Arial Black" FontWeight="Bold" FontStyle="Italic"/>
        <TextBox Name ="Login" VerticalAlignment="Top" HorizontalAlignment="Center" Width="165" Height="30" TextWrapping="Wrap" Margin="0,90,0,0" FontSize="22"/>
        <TextBox Name ="Password" VerticalAlignment="Top" HorizontalAlignment="Center" Width="165" Height="30" TextWrapping="Wrap" Margin="0,149,0,0" FontSize="22"/>
        <TextBox Name ="Pesel" VerticalAlignment="Top" HorizontalAlignment="Center" Width="165" Height="30" TextWrapping="Wrap" Margin="0,213,0,0" FontSize="22"/>
        <TextBox Name ="Firstname" VerticalAlignment="Top" HorizontalAlignment="Center" Width="165" Height="30" TextWrapping="Wrap" Margin="0,277,0,0" FontSize="22" Grid.RowSpan="2"/>
        <TextBox Name ="Surname" VerticalAlignment="Top" HorizontalAlignment="Center" Width="165" Height="30" TextWrapping="Wrap" Margin="0,47,0,0" FontSize="22" Grid.Row="1"/>
        <TextBox Name ="CreditCard" VerticalAlignment="Top" HorizontalAlignment="Center" Width="165" Height="30" TextWrapping="Wrap" Margin="0,111,0,0" FontSize="22" Grid.Row="1"/>
        <TextBox Name ="Birth_Date" VerticalAlignment="Top" HorizontalAlignment="Center" Width="165" Height="30" TextWrapping="Wrap" Margin="0,180,0,0" FontSize="22" Grid.Row="1"/>

        <Button Content="Załóż konto" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,234,0,0" FontSize="22" Click="SigningUp_Click" Background="#FF1CDCDB" FontWeight="Bold" Height="40" Width="163" Grid.Row="1"/>
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,61,0,0" FontSize="22" Foreground="#FFFBF6F6" Text="Login:" RenderTransformOrigin="0.517,0.114"/>
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" Text="Hasło" Margin="120,120,0,0" FontSize="22" Foreground="#FFFBF6F6"/>
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" Text="Pesel" Margin="120,184,0,0" FontSize="22" Foreground="#FFFBF6F6"/>
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" Text="Imię" Margin="120,243,0,0" FontSize="22" Foreground="#FFFBF6F6" Width="71"/>
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" Text="Nazwisko" Margin="120,18,0,0" FontSize="22" Foreground="#FFFBF6F6" RenderTransformOrigin="0.396,-0.303" Grid.Row="1" Height="29"/>
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" Text="CreditCard" Margin="120,77,0,0" FontSize="22" Foreground="#FFFBF6F6" Grid.Row="1" RenderTransformOrigin="0.51,0.028"/>
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" Text="Data Urodzenia" Margin="120,146,0,0" FontSize="22" Foreground="#FFFBF6F6" Grid.Row="1"/>


    </Grid>
</Window>
