<Window x:Class="BetApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="449" Width="880
        ">
    <Grid Margin="0,0,-16,-16" Background="#FF514C4C">
        <Label Content="SigmaBet" HorizontalAlignment="Center" Height="56" VerticalAlignment="Top" Width="880" Background="#FF1CDCDB" Foreground="#FFF8F7F7" FontSize="36" FontFamily="Arial Black" FontWeight="Bold" FontStyle="Italic"/>
        <TextBlock TextWrapping="Wrap" Text="Login:" Margin="302,107,0,0" FontSize="22" Foreground="#FFFBF6F6" VerticalAlignment="Top" HorizontalAlignment="Left" RenderTransformOrigin="0.493,-0.318" Width="59" Height="30"/>
        <TextBox Name="LoginTextBox" Margin="302,142,0,0" FontSize="20" Height="38" Width="255" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBlock TextWrapping="Wrap" Text="Hasło:" Margin="302,180,0,0" FontSize="22" Foreground="#FFFBF6F6" Width="168" Height="33" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <PasswordBox Name="PasswordBox" Margin="302,213,0,0" FontSize="22" VerticalAlignment="Top" HorizontalAlignment="Left" Width="255" Height="38"/>
        <Button Content="Zaloguj" Margin="302,272,0,0" FontSize="22" Click="LoginButton_Click" Background="#FF1CDCDB" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Left" Width="255" Height="38"/>
        <Button Content="Załóż konto" Margin="302,333,0,0" FontSize="22" Click="SignUpButton_Click" Background="#FF637FCA" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Left" Width="255" Height="38"/>
        <Button Name="Quit" Click="Full_Quit" Margin="0,61,26,0" Background="#FFBB2424" VerticalAlignment="Top" HorizontalAlignment="Right" Width="48" Height="48">
            <StackPanel Orientation="Horizontal">
                <Image Source="/x_quit.png" Width="40" Height="55"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
